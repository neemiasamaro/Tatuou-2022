@model WebApplication1.Models.Estilos

@{
    ViewBag.Title = "Edit";
}
<section class="section cta dark">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h3 class="mb-5 text-center display-4">Editar</h3>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="row">
                            <div class="form-outline col-6">
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label text-left" })
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-outline col-6">
                                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label text-left" })
                                <select name="Status" class="select-btn">
                                    <option value="true" selected>Ativo</option>
                                    <option value="false">Inativo</option>
                                </select>
                            </div>
                            <div class="form-outline col-12">
                                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label text-left" })
                                @Html.TextAreaFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @rows = "5", @cols = "30" } })
                                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                            </div>
                            <div class="fomr-outline col-6">
                                <a href="@Url.Action("Index")" class="btn btn-block">Voltar</a>
                            </div>

                            <div class="form-outline col-6">
                                <input type="submit" value="Salvar" class="btn btn-block" />
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
