@model IEnumerable<WebApplication1.Models.Estilos>

@{
    ViewBag.Title = "Index";
}

<section class="section cta dark">
    <div class="container" style="margin-top: 5rem;">
        <div class="row">
            <div class="col-md-12">
                <div class="card py-5 px-5 text-center">
                    <h4 class="display-4" style="color:black;">Listagem de Estilos</h4>
                    <a href="@Url.Action("Create","Estilos")"class="col-md-6 offset-md-3 btn btn-block mt-3">Cadastrar Estilos</a>
                    <table class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th width="30%">
                                    Nome
                                </th>
                                <th width="10%">
                                    Disponível
                                </th>
                                <th width="30%">
                                    Ações
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @if (item.Status == false)
                                        {
                                            ViewBag.Disponivel = "Não";
                                        }
                                        else
                                        {
                                            ViewBag.Disponivel = "Sim";
                                        }
                                        @ViewBag.Disponivel
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Edit", "Estilos", new { id = item.Id })"><i class="bi bi-pencil-square" style="font-size: 1.5em !important; color: black !important;"></i></a>
                                        <a href="@Url.Action("Delete", "Estilos", new { id = item.Id })"><i class="bi bi-trash" style="font-size: 1.5em !important; color: black !important;"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
