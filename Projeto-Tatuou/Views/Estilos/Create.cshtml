@model WebApplication1.Models.Estilos

@{
    ViewBag.Title = "Create";
}

<section class="section cta dark">
    <div class="container" style="margin-top: 7rem;">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                @using (Html.BeginForm("Create", "Estilos", FormMethod.Post, new
                {
                    enctype = "multipart/form-data"
                }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h3 class="mb-5 text-center display-4"><strong>Cadastro de Estilos</strong></h3>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="form-outline col-md-4 mb-4">
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label text-left" })
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-outline col-md-8 mb-4">
                                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label text-left" })
                                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-outline col-md-6 mb-4">
                                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label text-left" })
                                <select name="Status" class="btn-block">
                                    <option value="true" selected>Ativo</option>
                                    <option value="false">Inativo</option>
                                </select>
                            </div>
                            <div class="form-outline col-md-6 mb-4">
                                <input name="arquivo" class="btn btn-block mt-3" type="file" />
                            </div>

                            <div class="form-outline col-md-12">
                                <input type="submit" value="Cadastrar" class="btn btn-block" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
