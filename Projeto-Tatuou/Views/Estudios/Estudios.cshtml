@model IEnumerable<WebApplication1.Models.Estudio>

<section class="section cta dark">
    <div class="container" style="margin-top: 5rem;">
        <div class="row">
            <div class="col-12">
                <div class="card py-5 px-5">
                    <h4 class="display-4"><strong style="color:black;">Listagem de Estúdios</strong></h4>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>

                                <th>
                                    Estudio
                                </th>

                                <th>
                                    CNPJ
                                </th>
                                <th>
                                    Disponível
                                </th>
                                <th>
                                    Editar
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var item in Model)
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nomeEstudio)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cnpj)
                                    </td>
                                    <td>
                                        @if (item.Disponivel == false)
                                        {
                                            ViewBag.Disponivel = "Não";
                                        }
                                        else
                                        {
                                            ViewBag.Disponivel = "Sim";
                                        }
                                        @ViewBag.Disponivel
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "EditarEstudios", new { id = item.Id })
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</section>
