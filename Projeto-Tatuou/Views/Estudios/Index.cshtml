@model IEnumerable<WebApplication1.Models.Estudio>

<section class="section cta dark">
    <div class="container bg-white p-5" style="margin: 5rem auto 25rem auto;border-radius: 15px;">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center pb-5" style="font-size: 1.5rem;padding: 0;">
                                Estúdios
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="perfil-estudio">
                                        <div class="row">
                                            <div class="col-md-3 text-center max-width">
                                                <img src="~/@Html.DisplayFor(modelItem => item.Foto)" class="perfil-foto-td img-fluid" alt="...">
                                            </div>
                                            <div class="col-md-6">
                                                <h4 class="m-1"><strong style="color:black;">@Html.DisplayFor(modelItem => item.nomeEstudio)</strong></h4>
                                                <h6 class="m-1" style="color:black">
                                                    @Html.DisplayFor(modelItem => item.Cidade) -
                                                    @Html.DisplayFor(modelItem => item.Estado)
                                                </h6>
                                                <p class="m-1">Estilos</p>
                                                <ul class="m-1">
                                                    @foreach (var estilo in item.EstudioEstilos)
                                                    {
                                                        <li>@estilo.Estilo.Nome</li>
                                                    }
                                                </ul>
                                            </div>
                                            <div class="col-md-3 my-auto">
                                                <a href="@Url.Action("Perfil","Estudios", new { @id = item.Id})
                                                   " class="btn btn-block m-0">Visitar Perfil</a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
