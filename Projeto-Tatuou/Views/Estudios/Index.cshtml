@model IEnumerable<WebApplication1.Models.Estudio>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="tabela">
                    <thead>
                        <tr>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @foreach (var item in Model)
                                {
                                    <div class="card pl-3 pr-3 mt-4 mb-4">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <img src="~/Uploads/@item.Id/@item.Foto?@DateTime.Now.ToString(" yyyyMMddHHmmss")" style="max-width:180px;" />
                                            </div>
                                            <div class="col-md-10">
                                                <h3 class="pt-2 pb-2">@Html.DisplayFor(modelItem => item.nomeEstudio)</h3>
                                                <hr />
                                                <address>
                                                    @Html.DisplayFor(modelItem => item.Logradouro),
                                                    @Html.DisplayFor(modelItem => item.Numero),
                                                    @Html.DisplayFor(modelItem => item.Complemento) -
                                                </address>
                                                <address>
                                                    @Html.DisplayFor(modelItem => item.Bairro).
                                                    CEP: @Html.DisplayFor(modelItem => item.Cep).
                                                    @Html.DisplayFor(modelItem => item.Cidade)/
                                                    @Html.DisplayFor(modelItem => item.Estado).
                                                </address>
                                                <h3>@Html.DisplayFor(modelItem => item.EstudioEstilos)  </h3>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>