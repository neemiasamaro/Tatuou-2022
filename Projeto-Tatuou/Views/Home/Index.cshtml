@model IEnumerable<WebApplication1.Models.Estilos>

@{
    ViewBag.Title = "Index";
}

    <div id="appointment" class="section cta dark">
        <div class="my-5 py-5">
            <h2 class="my-5 titulo">Qual o seu estilo?</h2>
            <div class="cta-info">Descubra <strong>AGORA!</strong></div>
            <a class="btn md light" href="@Url.Action("Estilos","Estilos")"><i class="fa fa-thumb-tack"></i>Todos os estilos</a>
        </div>
    </div>

    <div id="main">
        <div id="service" class="my-5">
            <h3 style="color:black;" class="text-center cta-info my-5">Alguns de nossos estilos...</h3>
            <div class="content container text-center">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 my-3">
                            <h3 style="color:black;">
                                @Html.DisplayFor(modelItem => item.Nome)
                            </h3>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
